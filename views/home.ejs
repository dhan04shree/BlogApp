<%-include("includes/head.ejs");%>
    <nav class="navbar">
        <div class="nav">
            <h1>BlogApp</h1>
        </div>
        <div class="nav">
            <a href="http://localhost:8080/">Home</a>
            <a href="http://localhost:8080/register">Register</a>
