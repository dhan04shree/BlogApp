    <div class="homesec1">
        <h1>Explore, Engage and Inspired!</h1>
        <p>Welcome to BlogApp! Discover stories ,insights and inspiration here! </p>
        <form  method="get" action="/signin/create/1234"><button class="sec1btn">Create your blog</button></form>
    </div>
    <h1>ARTICLES</h1>
    <%for(post of posts){%>
    <div class="showblog"><br>
        <%for(user of users){%>
           <h3><%= user.id == post.user_id ? `@${user.username}`: "" %></h3>    
        <%}%>
        <br><br>
            <h1><%=post.heading%></h1>
            <p><%=post.content%></p>
            <form  method="get" action="/signin/edit/<%=post.user_id%>"><button class="postbtn">Edit post</button></form>
        <form method="get" action="/signin/delete/<%=post.user_id%>"><button class="postbtn">Delete post</button></form>
    </div>
    <%}%>
    <div class="contact">
        <h1>Contact Us</h1>
        <i class="fa-brands fa-facebook"></i>
        <i class="fa-brands fa-instagram"></i>
        <i class="fa-brands fa-x-twitter"></i>
        <i class="fa-brands fa-linkedin"></i>
    </div>
    <footer>
        <div class="terms"><b>Support</b><br><br>Help Center<br><br><br> Terms of Use</div>
